{% trans_default_domain 'FOSUserBundle' %}

{% block content %}
    <div class="col-xs-12 col-sm-9">
        <p class="pull-right visible-xs">
            <button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas">Toggle nav</button>
        </p>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">S'inscrire sur le site</h2>
            </div>

            <div class="panel-body">
                {% trans_default_domain 'FOSUserBundle' %}
                {% block fos_user_content %}
                    <form action="{{ path('site_user_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
                        {{ form_widget(form) }}
                        <div class="form-group">
                            <input type="submit" value="{{ 'registration.submit'|trans }}" class="btn btn-success btn-block"/>
                        </div>
                    </form>
                {% endblock fos_user_content %}
            </div>
        </div>
    </div>
{% endblock content %}