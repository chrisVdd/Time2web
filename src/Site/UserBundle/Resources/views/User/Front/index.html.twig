{% extends "SiteAdminBundle::layout.html.twig" %}

{% block custom_block %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Liste des utilisateurs</h1>
        </div>
    </div>
{% endblock %}

{% block container %}
    <a href="{{ path('admin_user_new') }}">
        <i class="fa fa-plus-circle fa-lg fa-fw"></i> Ajouter un nouvel utilisateur
    </a>
    
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
                <tr>
                    <th class="text-center">#</th>
                    <th class="text-center">Nom d'user</th>
                    <th class="text-center">Email</th>
                    <th class="text-center">Type</th>
                    <th class="text-center">Derni√®re connexion</th>                 
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for entity in entities %}
                    <tr class="odd gradeX">
                        <td>{{ entity.id }}</td>
                        <td>{{ entity.username }}</td>
                        <td>{{ entity.email }}</td>
                        <td>{{ entity.type }}</td>
                        <td>{% if entity.lastLogin %}{{ entity.lastLogin|date('Y-m-d H:i:s') }}{% endif %}</td>

                        <td class="table-action">
                            <a href="{{ path('admin_user_show', { 'id': entity.id }) }}">
                                Voir la fiche de l'utilisateur -
                            </a>
                            <a href="{{ path('admin_user_edit', { 'id': entity.id }) }}">
                                Editer
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
