{% extends "SiteAdminBundle::layout.html.twig" %}

{% block custom_block %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">La configuration SEO</h1>
        </div>
    </div>
{% endblock %}

{% block container %}
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
                <tr>
                    <th class="text-center">#</th>
                    <th class="text-center">Titre</th>
                    <th class="text-center">Suffixe du site</th>
                    <th class="text-center">Titre H1</th>
                    <th class="text-center">Meta description</th>
                    <th class="text-center">Meta Robot</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            
            <tbody>
                {% for entity in entities %}
                    <tr class="odd gradeX">
                        <td>{{ entity.id }}</td>
                        <td>{{ entity.title }}</td>
                        <td>{{ entity.suffix }}</td>
                        <td>{{ entity.h1 }}</td>
                        <td>{{ entity.metaDescription }}</td>
                        <td>{{ entity.metaRobot }}</td>
                        <td class="table-action">
                            <a href="{{ path('admin_seo_show', { 'id': entity.id }) }}">
                                Voir la configuration - 
                            </a>
                            <a href="{{ path('admin_seo_edit', { 'id': entity.id }) }}">
                                Editer
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>   
        </table>
    </div>
{% endblock %}