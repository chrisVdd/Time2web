{% extends "SiteFrontBundle::layout.html.twig" %}

{% block content %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h2 class="panel-title">Liste des tutoriels</h2>
        </div>
        <div class="panel-body" id="tutorial_list">
            {% for entity in entities %}
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <ul class="no-bulleted">
                        <li>
                            <h4>
                                <i class="fa fa-play"></i>
                                {{ entity.title }}
                            </h4>
                            <hr />

                            <ul class="fa-ul">
                                <li>
                                    <i class="fa-li fa fa-thumb-tack"></i>
                                    <p>{{ entity.category.name }}</p>
                                </li>
                                <li>
                                    <i class="fa-li fa fa-list-alt"></i>
                                    <p>{{ entity.description | truncate(180, true) }}</p>
                                    <a  href="{{ path('site_front_tutorial_show', { 'slug': entity.slug }) }}" role="button" class="btn btn-perso">
                                        Voir les d√©tails &raquo;
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
