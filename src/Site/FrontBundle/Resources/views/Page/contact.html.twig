{% block form_contact %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h2 class="panel-title">
                Envoyer un email directement
            </h2>
        </div>
        <div class="panel-body">
            {% for flashMessage in app.session.flashbag.get('success') %}
                <div class="alert alert-success alert-dismissible" role="alert">
                     <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                         <span aria-hidden="true">&times;</span>
                     </button>
                    <div>
                        {{ flashMessage }}
                    </div>
                </div>
            {% endfor %}
            <form action="{{ path('site_front_contact') }}" method="post" id="contact_form" class="col-lg-8 col-lg-offset-2">
                {{ form_errors(form) }}

                {{ form_row(form.name) }}
                {{ form_row(form.email) }}
                {{ form_row(form.subject) }}
                {{ form_row(form.body) }}

                {{ form_rest(form) }}

                <input type="submit" value="Envoyer" class="btn btn-success btn-block"/>
            </form>
        </div>
    </div>
{% endblock form_contact %}