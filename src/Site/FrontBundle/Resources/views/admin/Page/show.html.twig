{% extends "SiteAdminBundle::layout.html.twig" %}

{% block custom_block %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Voir une page</h1>
        </div>
    </div>
{% endblock %}

{% block container %}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-info">
                <div class="panel-heading">
                    Page "{{ entity.title }}"
                </div>
                <div class="panel-body">
                    <div class="panel-group" id="accordion">
                        <div class="ppanel panel-info">
                            <div class="panel-heading">
                                <h4 class="panel-title">
                                    <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne" class="collapsed">
                                        Nom de la page et titre 
                                    </a>
                                </h4>
                            </div>
                            <div id="collapseOne" class="panel-collapse collapse" style="height: 0px;">
                                <div class="panel-body">
                                    <ul>
                                        <li>
                                            <h3>Name :</h3>
                                            <p>{{ entity.name }}</p>
                                        </li>
                                        <hr />
                                        <li>
                                            <h3>Titre :</h3>
                                            <p>{{ entity.title }}</p>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                                        
                        <div class="ppanel panel-info">
                            <div class="panel-heading">
                                <h4 class="panel-title">
                                    <a data-toggle="collapse" data-parent="#accordion" href="#collapseTwo" class="collapsed">
                                        Contenu et date de dernière modification
                                    </a>
                                </h4>
                            </div>
                            <div id="collapseTwo" class="panel-collapse collapse" style="height: 0px;">
                                <div class="panel-body">
                                    <ul>
                                        <li>
                                            <h3>Contenu :</h3>
                                            <td>{{ entity.content|raw }}</td>
                                        </li>
                                        <hr />
                                        <li>
                                            <h3>Date de modification :</h3>
                                            <td>{{ entity.lastModified|date('Y-m-d H:i:s') }}</td>
                                        </li>
                                        <hr />
                                    </ul>
                                </div>
                            </div>
                        </div>
                                        
                        <div class="ppanel panel-info">
                            <div class="panel-heading">
                                <h4 class="panel-title">
                                    <a data-toggle="collapse" data-parent="#accordion" href="#collapseFour" class="collapsed">
                                        Actions
                                    </a>
                                </h4>
                            </div>
                            <div id="collapseFour" class="panel-collapse collapse" style="height: 0px;">
                                <div class="panel-body">
                                    <ul class="record_actions">
                                        <li>
                                            <a href="{{ path('admin_page') }}">
                                                Retour à la liste des pages
                                            </a>
                                        </li>
                                        <li>
                                            <a href="{{ path('admin_page_edit', { 'id': entity.id }) }}">
                                                Editer
                                            </a>
                                        </li>
                                        <li>{{ form(delete_form) }}</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- .panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
{% endblock %}