{% extends "SiteAdminBundle::layout.html.twig" %}

{% block custom_block %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Voir un tutoriel</h1>
        </div>
    </div>
{% endblock %}

{% block container %}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-info">
                <div class="panel-heading">
                    {{ entity.title }}
                </div>
                <div class="panel-body">
                    <div class="panel-group" id="accordion">
                        <div class="ppanel panel-info">
                            <div class="panel-heading">
                                <h4 class="panel-title">
                                    <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne" class="collapsed">
                                        Contenu et description
                                    </a>
                                </h4>
                            </div>
                            <div id="collapseOne" class="panel-collapse collapse" style="height: 0px;">
                                <div class="panel-body">
                                    <ul>
                                        <li>
                                            <h3>Image :</h3>
                                            
                                            {% if entity.image is not null %}
                                                <img src="{{ asset('uploads/img/') }}{{ entity.image.path }}">
                                            {% endif %}
                                        </li>
                                        <hr />
                                        <li>
                                            <h3>Description :</h3>
                                            <p>{{ entity.description }}</p>
                                        </li>
                                        <hr />
                                        <li>
                                            <h3>Contenu :</h3>
                                            <p>{{ entity.content|raw }}</p>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                                        
                        <div class="ppanel panel-info">
                            <div class="panel-heading">
                                <h4 class="panel-title">
                                    <a data-toggle="collapse" data-parent="#accordion" href="#collapseTwo" class="collapsed">
                                        Dates
                                    </a>
                                </h4>
                            </div>
                            <div id="collapseTwo" class="panel-collapse collapse" style="height: 0px;">
                                <div class="panel-body">
                                    <ul>
                                        <li>
                                            <h3>Date de création :</h3>
                                            <p>{{ entity.createdAt|date('Y-m-d H:i:s') }}</p>
                                        </li>
                                        <hr />
                                        <li>
                                            <h3>Dernière modification :</h3>
                                            <p>{{ entity.lastModified|date('Y-m-d H:i:s') }}</p>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                                        
                        <div class="ppanel panel-info">
                            <div class="panel-heading">
                                <h4 class="panel-title">
                                    <a data-toggle="collapse" data-parent="#accordion" href="#collapseThree" class="collapsed">
                                        Autres informations
                                    </a>
                                </h4>
                            </div>
                            <div id="collapseThree" class="panel-collapse collapse" style="height: 0px;">
                                <div class="panel-body">
                                    <ul>
                                        <li>
                                            <h3>Difficulté :</h3>
                                            <p>{{ entity.difficulty }}</p>
                                        </li>
                                        <hr />
                                        <li>
                                            <h3>Connaissances recquises :</h3>
                                            <p>{{ entity.requirement }}</p>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                                        
                        <div class="ppanel panel-info">
                            <div class="panel-heading">
                                <h4 class="panel-title">
                                    <a data-toggle="collapse" data-parent="#accordion" href="#collapseFour" class="collapsed">
                                        Actions
                                    </a>
                                </h4>
                            </div>
                            <div id="collapseFour" class="panel-collapse collapse" style="height: 0px;">
                                <div class="panel-body">
                                    <ul class="record_actions">
                                        <li>
                                            <a href="{{ path('admin_tutorial') }}">
                                                Retour à la liste des tutoriels
                                            </a>
                                        </li>
                                        <li>
                                            <a href="{{ path('admin_tutorial_edit', { 'slug': entity.slug }) }}">
                                                Editer
                                            </a>
                                        </li>
                                        <li>{{ form(delete_form) }}</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- .panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
{% endblock %}